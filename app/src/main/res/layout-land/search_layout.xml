<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true">


    <include
        layout="@layout/search_box_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/search_bar_margin_left"
        android:layout_marginEnd="@dimen/search_bar_margin_right"
        android:layout_marginBottom="@dimen/search_box_layout_margin_bottom"
        android:layout_marginTop="@dimen/search_box_layout_margin_top"
        android:id="@+id/search_box"/>

    <TextView
        android:id="@+id/clear_search_history_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/search_bar_height"
        android:text="@string/clear_search_history_text"
        android:textColor="@color/colorPrimaryLight"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:layout_marginTop="@dimen/search_box_layout_clear_history_margin_top"
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:padding="8dp"
        android:background="?attr/selectableItemBackgroundBorderless" />

</RelativeLayout>