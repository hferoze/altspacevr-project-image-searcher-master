<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/black"
    android:elevation="2dp">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/close_viewer_image_view"
        android:layout_marginTop="@dimen/tab_bar_height"
        android:padding="12dp"
        android:layout_width="@dimen/viewer_back_btn_width"
        android:layout_height="wrap_content"
        android:src="@drawable/close_search_tray_btn"
        android:adjustViewBounds="true"
        android:tint="@color/grey300"
        android:rotation="90"
        android:background="?attr/selectableItemBackgroundBorderless"/>


</RelativeLayout>